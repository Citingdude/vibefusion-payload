{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
      "build": {
        "outputs": [
            "app/nuxt/.output",
            "dist/**", 
            ".next/**", 
            "!.next/cache/**"
        ]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "typecheck": {
        "dependsOn": ["^typecheck"]
      },
      "lint": {
        "dependsOn": ["^lint"]
      }, 
      "generate:types": {
        "dependsOn": ["^generate:types"]
      }
    }
  }